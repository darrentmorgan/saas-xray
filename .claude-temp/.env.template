# Claude Code Project Environment
# Copy this file to .claude/.env and customize for your project

# Context usage thresholds (percentage)
CLAUDE_WARN_60=60
CLAUDE_WARN_70=70
CLAUDE_WARN_80=80

# Memory limit (MB) - process RSS
# Default: 7168MB (7GB, 80% of 8GB heap)
CLAUDE_MEMORY_LIMIT_MB=7168

# Log archival threshold (lines)
# Archive session logs when they exceed this many lines
CLAUDE_LOG_ARCHIVE_THRESHOLD=1000

# Feature flags
CLAUDE_AUTO_ARCHIVE_LOGS=true
CLAUDE_STREAM_LARGE_OUTPUTS=false  # Future: stream scout reports to disk
CLAUDE_ENABLE_MEMORY_GUARD=true
CLAUDE_ENABLE_CONTEXT_MONITOR=true
