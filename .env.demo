# Security Configuration
JWT_SECRET=your-demo-jwt-secret-key-32-characters-long
ENCRYPTION_KEY=your-demo-encryption-key-32-chars

# Demo-Specific Features
DEMO_MODE=true
DEMO_DATA_REFRESH_INTERVAL=3600
DEMO_AUTO_RESET=false
DEMO_MAX_CONNECTIONS=100

# Analytics and Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
