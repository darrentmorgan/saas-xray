# Environment Settings
NODE_ENV=production
ENVIRONMENT=demo
APP_VERSION=1.0.0

# Frontend Configuration
VITE_APP_NAME=SaaS X-Ray Demo
VITE_ENVIRONMENT=demo
VITE_API_URL=https://demo.saasxray.com/api
VITE_WS_URL=wss://demo.saasxray.com/ws
VITE_FRONTEND_URL=https://demo.saasxray.com

# Supabase Configuration
VITE_SUPABASE_URL=https://your-demo-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-demo-anon-key
