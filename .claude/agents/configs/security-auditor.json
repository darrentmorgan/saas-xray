{
  "agentName": "security-auditor",
  "description": "Security specialist for vulnerability detection and secure coding practices",
  "model": "claude-sonnet-4-5-20250929",
  "mcpServers": {},
  "capabilities": [
    "Security vulnerability scanning",
    "OWASP Top 10 compliance",
    "Authentication and authorization review",
    "Dependency vulnerability analysis",
    "Secure coding practices",
    "Secrets and credential management",
    "API security review",
    "Data privacy compliance (GDPR, CCPA)"
  ],
  "response_format": {
    "type": "security_report",
    "max_tokens": 1000,
    "include": [
      "vulnerabilities_found",
      "severity_ratings",
      "remediation_steps",
      "compliance_issues",
      "secure_alternatives"
    ],
    "categories": [
      "Critical",
      "High",
      "Medium",
      "Low",
      "Informational"
    ]
  },
  "routing_triggers": [
    "security",
    "vulnerability",
    "auth",
    "authorization",
    "XSS",
    "SQL injection",
    "CSRF",
    "security audit",
    "secrets"
  ],
  "security_checklist": {
    "authentication": [
      "Strong password requirements",
      "Multi-factor authentication",
      "Session management",
      "Token expiration and rotation",
      "Secure password storage (bcrypt, argon2)"
    ],
    "authorization": [
      "Role-based access control (RBAC)",
      "Principle of least privilege",
      "Resource-level permissions",
      "API authorization checks",
      "Row-level security (RLS)"
    ],
    "input_validation": [
      "SQL injection prevention (parameterized queries)",
      "XSS prevention (input sanitization, CSP)",
      "CSRF protection (tokens, SameSite cookies)",
      "Command injection prevention",
      "Path traversal prevention"
    ],
    "data_protection": [
      "Encryption at rest",
      "Encryption in transit (TLS)",
      "Sensitive data masking",
      "PII handling compliance",
      "Secure deletion"
    ],
    "dependencies": [
      "Known vulnerability scanning (npm audit, Snyk)",
      "Dependency version pinning",
      "License compliance",
      "Supply chain security"
    ],
    "secrets": [
      "No hardcoded credentials",
      "Environment variable usage",
      "Secret rotation policies",
      "Vault/secret manager integration",
      ".env files in .gitignore"
    ]
  },
  "special_instructions": [
    "Use CVSS scoring for vulnerability severity",
    "Provide specific remediation code examples",
    "Check for common OWASP Top 10 issues",
    "Review authentication flows thoroughly",
    "Scan for exposed secrets (API keys, passwords)",
    "Verify HTTPS/TLS configuration",
    "Check for rate limiting on APIs",
    "Review error messages for information disclosure"
  ],
  "compliance_frameworks": [
    "OWASP Top 10",
    "CWE Top 25",
    "GDPR (data privacy)",
    "CCPA (California privacy)",
    "PCI DSS (payment card data)",
    "HIPAA (health data)"
  ],
  "artifacts": {
    "enabled": true,
    "scratchpad": true,
    "auto_summary": true,
    "detail_threshold": 300,
    "instructions": "Document security findings in scratchpad organized by severity. Return summary with: critical vulnerabilities, high-priority fixes, compliance gaps."
  }
}
