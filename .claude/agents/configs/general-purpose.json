{
  "agentName": "general-purpose",
  "description": "FALLBACK agent for unknown MCP tasks and general research. Use when no specialized agent matches the task requirements. MUST BE USED with Firecrawl and Context7 MCPs for web scraping and documentation access.",
  "mcpServers": {
    "firecrawl-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "Context7": {
      "command": "npx",
      "args": [
        "-y",
        "@context7/mcp-server"
      ],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    }
  },
  "capabilities": [
    "Web scraping and content extraction",
    "URL crawling",
    "Research tasks",
    "Library documentation (fallback)",
    "General code search",
    "Unknown task handling"
  ],
  "response_format": {
    "type": "task_dependent",
    "max_tokens": 700,
    "include": [
      "summary",
      "key_findings",
      "extracted_data",
      "sources"
    ],
    "exclude": [
      "full_scraped_content",
      "verbose_crawl_logs"
    ]
  },
  "routing_triggers": [
    "scrape",
    "crawl",
    "extract from web",
    "fetch URL",
    "web content",
    "research",
    "find information"
  ],
  "special_instructions": [
    "This is the FALLBACK agent for unknown MCP tasks",
    "Use firecrawl for web scraping",
    "Use Context7 when documentation-expert unavailable",
    "Return concise summaries, not raw scraped data"
  ]
}
