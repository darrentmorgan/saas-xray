# Test Environment Configuration for SaaS X-Ray E2E Tests

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5433/saas_xray_test
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5433/saas_xray_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=test
PORT=3001
FRONTEND_PORT=3000

# Authentication & Security
JWT_SECRET=test-jwt-secret-for-e2e-tests-only-not-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
ENCRYPTION_KEY=test-encryption-key-32-characters!!

# OAuth Test Configuration (Mock endpoints)
SLACK_CLIENT_ID=test-slack-client-id
SLACK_CLIENT_SECRET=test-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:3001/auth/oauth/slack/callback

GOOGLE_CLIENT_ID=test-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/oauth/google/callback

MICROSOFT_CLIENT_ID=test-microsoft-client-id
MICROSOFT_CLIENT_SECRET=test-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3001/auth/oauth/microsoft/callback
MICROSOFT_TENANT_ID=common

# API Configuration
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Playwright Test Configuration
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_API_URL=http://localhost:3001
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_EXPECT_TIMEOUT=5000

# Test Data Configuration
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=SecurePass123!
TEST_USER_EMAIL=user@example.com
TEST_USER_PASSWORD=TestPass123!

# Mock Services
MOCK_OAUTH_PROVIDERS=true
MOCK_WEBSOCKET=true
MOCK_EXTERNAL_APIS=true

# Logging
LOG_LEVEL=warn
DISABLE_LOGGING=true

# Feature Flags for Testing
ENABLE_REAL_TIME_UPDATES=true
ENABLE_OAUTH_FLOWS=true
ENABLE_AUTOMATION_DISCOVERY=true
ENABLE_RISK_SCORING=true

# Performance Testing
MAX_AUTOMATIONS_PER_PAGE=100
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# Security Testing
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=false
SESSION_TIMEOUT=3600000

# Browser Testing
HEADLESS=true
SLOW_MO=0
TRACE_ON_RETRY=true
VIDEO_ON_FAILURE=true