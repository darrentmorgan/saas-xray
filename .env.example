# Singura Environment Configuration
# Copy this file to .env.local for development or .env.production for production
# and fill in the appropriate values

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
PORT=3001
APP_PORT=3001

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ==========================================
# Database Configuration
# ==========================================
DB_NAME=singura
DB_USER=singura
DB_PASSWORD=your_secure_database_password_here

# Full database URL (overrides individual DB_* settings)
DATABASE_URL=postgresql://singura:your_secure_database_password_here@localhost:5432/singura

# ==========================================
# Redis Configuration
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_MAXMEMORY=256mb

# ==========================================
# Security Configuration
# ==========================================
# JWT Secret Key (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here_32_characters_minimum

# Encryption Key for sensitive data (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_encryption_key_here_32_characters_exactly

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here_32_characters_minimum

# ==========================================
# OAuth Configuration
# ==========================================

# Slack OAuth Application
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# Google OAuth Application
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Microsoft OAuth Application
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here

# ==========================================
# Feature Flags
# ==========================================
ENABLE_REAL_TIME=true
ENABLE_BACKGROUND_JOBS=true
ENABLE_AUDIT_LOGGING=true

# Skip certain initialization steps (useful for testing)
SKIP_MIGRATIONS=false
SKIP_INIT=false
SKIP_WORKER=false

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# Available log levels: error, warn, info, verbose, debug, silly
# Available formats: json, text, combined

# ==========================================
# Performance Configuration
# ==========================================
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Max requests per window

# ==========================================
# Nginx Configuration (Production Only)
# ==========================================
NGINX_PORT=80
NGINX_SSL_PORT=443
SSL_CERT_PATH=./certs

# ==========================================
# Monitoring Configuration
# ==========================================
# Health check configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# ==========================================
# Webhook Configuration (Optional)
# ==========================================
WEBHOOK_SECRET=your_webhook_secret_here

# ==========================================
# Development Configuration
# ==========================================
# Only used in development mode
DEV_ENABLE_MOCK_DATA=false
DEV_ENABLE_DEBUG_ROUTES=false
DEV_SKIP_AUTH=false

# ==========================================
# Compliance Configuration
# ==========================================
# Data retention periods (in days)
AUDIT_LOG_RETENTION_DAYS=365
USER_DATA_RETENTION_DAYS=2555  # 7 years
AUTOMATION_DATA_RETENTION_DAYS=1095  # 3 years

# Privacy settings
ENABLE_DATA_ENCRYPTION=true
ENABLE_PII_MASKING=true
ENABLE_GDPR_COMPLIANCE=true

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# ==========================================
# Error Reporting Configuration
# ==========================================
SENTRY_DSN=
ERROR_REPORTING_ENABLED=false

# ==========================================
# Analytics Configuration
# ==========================================
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=