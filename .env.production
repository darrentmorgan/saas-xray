# ============================================================================
# Production Environment Configuration
# Enterprise customer production deployments
# Domain: app.saasxray.com
# ============================================================================

# Environment Settings
NODE_ENV=production
ENVIRONMENT=production
APP_VERSION=1.0.0

# Frontend Configuration
VITE_APP_NAME=SaaS X-Ray
VITE_ENVIRONMENT=production
VITE_API_URL=https://app.saasxray.com/api
VITE_WS_URL=wss://app.saasxray.com/ws
VITE_FRONTEND_URL=https://app.saasxray.com

# Supabase Configuration
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-production-service-key

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@db.your-production-project.supabase.co:5432/postgres

# OAuth Configuration - Production Environment
SLACK_CLIENT_ID=your-production-slack-client-id
SLACK_CLIENT_SECRET=your-production-slack-client-secret
SLACK_REDIRECT_URI=https://app.saasxray.com/oauth/slack/callback

GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://app.saasxray.com/oauth/google/callback

MICROSOFT_CLIENT_ID=your-production-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-production-microsoft-client-secret
MICROSOFT_REDIRECT_URI=https://app.saasxray.com/oauth/microsoft/callback

# Security Configuration (Use strong, unique keys in production)
JWT_SECRET=your-production-jwt-secret-key-32-characters-long
ENCRYPTION_KEY=your-production-encryption-key-32-chars

# Production-Specific Features
DEMO_MODE=false
PRODUCTION_MODE=true
ENTERPRISE_FEATURES_ENABLED=true
MULTI_TENANT_ENABLED=true

# Analytics and Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
SENTRY_DSN=your-production-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Performance Settings
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_API_TIMEOUT=30000
VITE_WS_TIMEOUT=15000

# Production Feature Flags
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_GPT5_VALIDATION=true
VITE_ENABLE_CROSS_PLATFORM_CORRELATION=true
VITE_ENABLE_PDF_REPORTS=true
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_ADVANCED_RISK_SCORING=true
VITE_ENABLE_COMPLIANCE_REPORTING=true
VITE_ENABLE_ENTERPRISE_SSO=true
VITE_ENABLE_API_RATE_LIMITING=true

# Enterprise Settings
VITE_ENABLE_CUSTOM_BRANDING=true
VITE_ENABLE_ADVANCED_PERMISSIONS=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_DATA_EXPORT=true

# Security and Compliance
VITE_ENABLE_SOC2_COMPLIANCE=true
VITE_ENABLE_GDPR_COMPLIANCE=true
VITE_ENABLE_AUDIT_LOGS_RETENTION=true
VITE_DATA_RETENTION_YEARS=7

# Rate Limiting (Production limits)
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
DISCOVERY_RATE_LIMIT_PER_HOUR=10
OAUTH_RATE_LIMIT_PER_HOUR=20

# Scaling Configuration
MAX_ORGANIZATIONS=1000
MAX_CONNECTIONS_PER_ORG=100
MAX_AUTOMATIONS_PER_CONNECTION=10000

# Backup and Disaster Recovery
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=90
ENABLE_POINT_IN_TIME_RECOVERY=true

# Monitoring and Alerting
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_SECONDS=30
ENABLE_ERROR_ALERTS=true
ENABLE_PERFORMANCE_ALERTS=true
ENABLE_SECURITY_ALERTS=true