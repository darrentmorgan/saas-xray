# ============================================================================
# Staging Environment Configuration
# Customer beta testing environment
# Domain: staging.saasxray.com
# ============================================================================

# Environment Settings
NODE_ENV=production
ENVIRONMENT=staging
APP_VERSION=1.0.0

# Frontend Configuration
VITE_APP_NAME=SaaS X-Ray Staging
VITE_ENVIRONMENT=staging
VITE_API_URL=https://staging.saasxray.com/api
VITE_WS_URL=wss://staging.saasxray.com/ws
VITE_FRONTEND_URL=https://staging.saasxray.com

# Supabase Configuration
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-key

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@db.your-staging-project.supabase.co:5432/postgres

# Staging Organization Configuration
DEFAULT_ORG_SLUG=staging-org
DEFAULT_ORG_ID=your-staging-org-uuid

# OAuth Configuration - Staging Environment
SLACK_CLIENT_ID=your-staging-slack-client-id
SLACK_CLIENT_SECRET=your-staging-slack-client-secret
SLACK_REDIRECT_URI=https://staging.saasxray.com/oauth/slack/callback

GOOGLE_CLIENT_ID=your-staging-google-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-client-secret
GOOGLE_REDIRECT_URI=https://staging.saasxray.com/oauth/google/callback

MICROSOFT_CLIENT_ID=your-staging-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-staging-microsoft-client-secret
MICROSOFT_REDIRECT_URI=https://staging.saasxray.com/oauth/microsoft/callback

# Security Configuration
JWT_SECRET=your-staging-jwt-secret-key-32-characters-long
ENCRYPTION_KEY=your-staging-encryption-key-32-chars

# Staging-Specific Features
DEMO_MODE=false
BETA_FEATURES_ENABLED=true
CUSTOMER_FEEDBACK_ENABLED=true
STAGING_DATA_RETENTION_DAYS=90

# Analytics and Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
SENTRY_DSN=your-staging-sentry-dsn

# Performance Settings
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_API_TIMEOUT=15000
VITE_WS_TIMEOUT=10000

# Beta Feature Flags
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_GPT5_VALIDATION=true
VITE_ENABLE_CROSS_PLATFORM_CORRELATION=true
VITE_ENABLE_PDF_REPORTS=true
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_ADVANCED_RISK_SCORING=true
VITE_ENABLE_COMPLIANCE_REPORTING=true

# Customer Beta Settings
VITE_ENABLE_BETA_FEEDBACK_WIDGET=true
VITE_ENABLE_USAGE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Rate Limiting (More permissive for beta testing)
API_RATE_LIMIT_REQUESTS_PER_MINUTE=120
DISCOVERY_RATE_LIMIT_PER_HOUR=20
OAUTH_RATE_LIMIT_PER_HOUR=30